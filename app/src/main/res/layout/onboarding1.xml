<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dots_height"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"></LinearLayout>
    </androidx.viewpager2.widget.ViewPager2>

    <View
        android:id="@+id/arrow_left"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="3dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/onboard1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/photos_viewpager"
        android:layout_width="145dp"
        android:layout_height="257dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_editor_absoluteX="266dp">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />
    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.Material3.MaterialDivider.Heavy"
        android:layout_width="213dp"
        android:layout_height="34dp"
        android:lineHeight="34sp"
        android:text="Office Furniture"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="28dp"
        app:layout_editor_absoluteY="596dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="583dp" />

    <TextView
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:text="Lorem ipsum dolor sit amet, consecteturadipiscing elit"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="639px"
        app:layout_editor_absoluteY="48px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="634dp" />

    <TextView
        android:layout_width="164dp"
        android:layout_height="39dp"
        android:text="SKIP"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_editor_absoluteX="747px"
        app:layout_editor_absoluteY="171px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="684dp" />
    <View
        android:id="@+id/line"
        android:layout_width="135dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/line"
        app:layout_editor_absoluteY="723dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>